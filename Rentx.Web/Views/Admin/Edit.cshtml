@model ProductViewModel

<div class="text-center">
    <form asp-controller="Admin" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="row form-group">
            <div class="col">
                <input type="text" class="form-control" asp-for="Title" placeholder="Title">
            </div>
        </div>

        <div class="row form-group">
            <div class="col">
                <input type="number" class="form-control" asp-for="Price" placeholder="Price">
            </div>
        </div>

        <div class="row form-group">
            <div class="col">
                <input type="text" class="form-control" asp-for="Description" placeholder="Description">
            </div>
        </div>

        <div class="row form-group">
            <div class="col">
                <input type="number" class="form-control" asp-for="AvailableQuantity" placeholder="AvailableQuantity">
            </div>
        </div>

        <div class="row form-group">
            <div class="col">
                <input type="file" class="form-control" asp-for="Image" />
            </div>
        </div>

        <img src="~/images/@Model.ImageFileName" class="img-thumbnail">
        <input type="text" hidden asp-for="ImageFileName" />
        <input type="text" hidden asp-for="Id" />

        <div class="row form-group">
            <div class="col">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
    </form>
</div>